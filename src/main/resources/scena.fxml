<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           prefHeight="600.0" prefWidth="800.0"
           fx:controller="cz.vse.java.adventura.Controller">
    <ImageView fx:id="obrazekLokace" />
    <BorderPane>
        <bottom>
            <VBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.5);">
                <Label fx:id="jmenoLokace">
                    <font>
                        <Font size = "24.0" />
                    </font>
                </Label>
                <Label fx:id="popisLokace">
                    <font>
                        <Font size = "16.0" />
                    </font>
                </Label>
            </VBox>
        </bottom>
        <right>
            <VBox spacing="10" >
                <padding>
                    <Insets top ="10" bottom="10" left="10" right="10" />
                </padding>
                <!--    Vychody-->
                <VBox style="-fx-background-color: rgba(255,255,255,0.5);">
                    <Label text="Východy">
                        <font>
                            <Font size = "18.0" />
                        </font>
                    </Label>
                </VBox>
                <!--    Predmety-->
                <VBox style="-fx-background-color: rgba(255,255,255,0.5);">
                    <Label text="Předměty" >
                        <font>
                            <Font size = "18.0" />
                        </font>
                    </Label>
                </VBox>
                <!--    Batoh-->
                <VBox style="-fx-background-color: rgba(255,255,255,0.5);">
                    <Label text="Batoh" >
                        <font>
                            <Font size = "18.0" />
                        </font>
                    </Label>
                </VBox>
            </VBox>
        </right>

    </BorderPane>

</StackPane>
